#!/usr/bin/env bash

## Author  : Aditya Shakya
## Mail    : adi1090x@gmail.com
## Github  : @adi1090x
## Twitter : @adi1090x

dir="$HOME/.config/rofi/style"
rofi_command="rofi -theme $dir/tray.rasi"

# Links
google=""
github=""
mail=""
youtube=""

# Variable passed to rofi
options="$google\n$github\n$mail\n$youtube"

chosen="$(echo -e "$options" | $rofi_command -p "Open In  :  Firefox" -dmenu -selected-row 0)"
case $chosen in
    $google)
        $BROWSER https://www.google.com &
        ;;
    $github)
        $BROWER https://www.github.com &
        ;;
    $mail)
        $BROWSER https://www.gmail.com &
        ;;
    $youtube)
        $BROWSER https://www.youtube.com &
        ;;
esac

